<!-- workout.handlebars -->

{{ header}}

<section class="workout-section">
  <div class="container">
    <h2>Workouts</h2>

<ul class="workout-card">
    <li class="sets">Sets:</li>
    <input type="text" id="sets" >
    <li class="reps">Reps:</li>
    <input type="text" id="reps" >
</ul>

<div id="workout-card" data-userid="{{id}}">
  <select id="dropdown"></select>
    <ul class="workout-list">
      {{#each workouts}}
      <li><a href="/workouts/{{id}}">{{name}}</a></li>
      {{sets}}{{reps}}
      {{/each}}
    </ul>
      <button id="saveButton">Save Selection</button>
  <div id="descriptionContainer"></div>
  <div id="savedDataContainer"></div>
</div>
  </div>
</section>

